<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridView1"
    android:numColumns="auto_fit"
    android:gravity="center"
    android:columnWidth="240dp"
    android:stretchMode="columnWidth"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/coverBackground">


    <ImageButton
        android:id="@+id/classic_cover"
        android:layout_width="@dimen/album_cover_width"
        android:layout_height="@dimen/album_cover_height"
        android:padding="@dimen/cover_padding"
        android:src="@drawable/classic_cover"
        android:layout_marginLeft="14dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/coverBackground" />

    <ImageButton
        android:id="@+id/gospel_cover"
        android:layout_width="@dimen/album_cover_width"
        android:layout_height="@dimen/album_cover_height"
        android:src="@drawable/gospel_cover"
        android:padding="@dimen/cover_padding"
        android:layout_toRightOf="@id/classic_cover"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/jazz_cover"
        android:layout_width="@dimen/album_cover_width"
        android:layout_height="@dimen/album_cover_height"
        android:src="@drawable/jazz_cover"
        android:padding="@dimen/cover_padding"
        android:layout_marginLeft="14dp"
        android:scaleType="fitCenter"
        android:layout_below="@id/classic_cover"
        />

    <ImageButton
        android:id="@+id/slowjams_cover"
        android:layout_width="@dimen/album_cover_width"
        android:layout_height="@dimen/album_cover_height"
        android:padding="@dimen/cover_padding"
        android:src="@drawable/slowjams_cover"
        android:layout_toRightOf="@id/jazz_cover"
        android:layout_below="@id/gospel_cover"
        android:scaleType="fitCenter" />

</RelativeLayout>
